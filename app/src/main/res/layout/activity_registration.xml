<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Registration"
    android:orientation="vertical"
    android:background="#2ad1eb">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/App_name"
        android:gravity="center_horizontal"
        android:layout_margin="40dp"
        android:text="@string/MyAppName"
        android:textSize="50sp"
        android:textColor="#FFFFFF"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/App_name"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:src="@mipmap/ic_launcher_foreground"
        android:contentDescription="TODO"
        android:paddingBottom="30dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#2ad1eb"
        android:id="@+id/edit_card_view"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Ваше имя"
            android:maxLength="50"
            android:paddingHorizontal="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="#FFFFFF"
            android:id="@+id/editT_name"
            android:autofillHints=""
            android:inputType="textCapSentences"
            android:lines="1"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#2ad1eb"
        android:id="@+id/edit_card_view_surname"
        android:layout_below="@+id/edit_card_view"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="40dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Ваша фамилия"
            android:maxLength="50"
            android:paddingHorizontal="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="#FFFFFF"
            android:id="@+id/editT_surname"
            android:autofillHints=""
            android:inputType="textCapSentences"
            android:lines="1"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#0366fc"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_card_view"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0366fc"
            android:textColor="@color/white"
            android:text="Зарегистрироваться"
            android:id="@+id/button"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>